<h1>Friends</h1>


<% if @current_user.friends.empty? %>
    <h3>No friends yet</h3>
    <% else %>
    <div class = "image-gallery">
    <% @current_user.friends.each do |friend| %>

    <div class ="container">
    <% begin %>
    <%= link_to (image_tag("#{friend.profile_pic}")), user_path(friend), class: "gallery-img image"  %><br>
    <% rescue %>
    <%= link_to (image_tag("profile_default")), user_path(friend), class: "gallery-img image"  %><br>
    <% end %>
    <div class="middle">
    <div class = "text" >
      <%= link_to ("#{User.percentage_match(friend, @current_user)}% Match #{friend.username.capitalize}"), friend %>
    </div>
    </div>
    </div>
    <% end %>
<% end %>

</div>
